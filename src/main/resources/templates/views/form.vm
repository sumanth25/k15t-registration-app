		    #springBind("participant")
                <div class="form-group">
                    <div class="modal-body row">
                    	<label for="fullName" class="col-sm-2 control-label">Full Name*</label>
	                    <div class="col-sm-4">
	                        <input type="text" id="fullName" name="fullName" placeholder="Full Name" value="$!{fullName}" class="form-control" autofocus>
	                    </div>
	                    <div class="col-sm-6">
	                        <font class="text-danger">$!{fullNameError}</font>
	                    </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="modal-body row">
                    	<label for="password" class="col-sm-2 control-label">Password*</label>
	                    <div class="col-sm-4">
	                        <input type="password" id="password" name="password" placeholder="Password" value="$!{password}" class="form-control" autofocus>
	                    </div>
	                    <div class="col-sm-6">
	                        <font class="text-danger">$!{passwordError}</font>
	                    </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="modal-body row">
                        <label for="address" class="col-sm-2 control-label">Address*</label>
	                    <div class="col-sm-4">
	                        <input type="text" id="address" name="address" placeholder="Address" value="$!{address}" class="form-control" autofocus>
	                    </div>
	                    <div class="col-sm-6">
	                        <font class="text-danger">$!{addressError}</font>
	                    </div>
                    </div>
                </div>
                <div class="form-group">
					<div class="modal-body row">
						<label for="email" class="col-sm-2 control-label">Email*</label>
	                    <div class="col-sm-4">
	                        <input type="text" id="email" name="email" placeholder="Email" value="$!{email}" class="form-control" autofocus>
	                    </div>
	                    <div class="col-sm-6">
	                        <font class="text-danger">$!{emailError}</font>
	                    </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="modal-body row">
                        <label for="phone" class="col-sm-2 control-label">Phone</label>
	                    <div class="col-sm-4">
	                        <input type="phoneNumber" id="phoneNumber" name="phone" placeholder="Phone number" value="$!{phone}" class="form-control" autofocus>
	                    </div>
	                    <div class="col-sm-6">
	                        <font class="text-danger">$!{phoneError}</font>
	                    </div>
                    </div>
                </div>                 	                				  
		      </table>
		        <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <span class="help-block">*Required fields</span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Register</button>
            </form> <!-- /form -->